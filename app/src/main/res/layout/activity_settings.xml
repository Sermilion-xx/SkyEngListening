<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/almostWhite"
    tools:context="ru.skyeng.listening.Modules.Settings.SettingsActivity">

    <RelativeLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <include
            layout="@layout/layout_shadow"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@+id/toolbar" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/reminder_layout"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_below="@+id/toolbar_layout"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shadow_top_small" />

        <TextView
            android:id="@+id/text_remainder"
            style="@style/textStylePrimary"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/remainders" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp" />

        <View xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/shadow"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shadow110" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/level_layout"
        android:layout_below="@+id/reminder_layout"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="117dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shadow_top_small" />

        <TextView
            android:text="@string/level"
            style="@style/textStylePrimary"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"/>


        <View xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shadow110" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textStylePrimary"
            android:textStyle="bold"
            android:text="Средний"
            android:textColor="@color/colorAccent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="13dp"/>
        
        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="#e4e9f1"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"/>

        <ImageView
            android:id="@+id/level_1"
            style="@style/levelStyle"
            android:layout_marginTop="50dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp" />

        <ImageView
            android:id="@+id/level_2"
            style="@style/levelStyle"
            android:layout_marginTop="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/level_1"
            android:layout_toEndOf="@+id/level_1"
            />

        <ImageView
            android:id="@+id/level_3"
            style="@style/levelStyle"
            android:layout_marginTop="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/level_2"
            android:layout_toEndOf="@+id/level_2"
            />

        <ImageView
            android:id="@+id/level_4"
            style="@style/levelStyle"
            android:layout_marginTop="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/level_3"
            android:layout_toEndOf="@+id/level_3"
            />

        <ImageView
            android:id="@+id/level_5"
            style="@style/levelStyle"
            android:layout_marginTop="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/level_4"
            android:layout_toEndOf="@+id/level_4"
            />

        <ImageView
            android:id="@+id/level_6"
            style="@style/levelStyle"
            android:layout_marginTop="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/level_5"
            android:layout_toEndOf="@+id/level_5"
            />
    </RelativeLayout>


</RelativeLayout>
