<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBluePlayer">

        <TextView
            android:id="@+id/time_elapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="46dp"
            android:text="11:32"
            android:textColor="@color/colorWhite" />

        <ImageButton
            android:id="@+id/prev_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="35dp"
            android:layout_toLeftOf="@+id/play_pause"
            android:layout_toStartOf="@+id/play_pause"
            android:background="@null"
            android:src="@drawable/prev_30" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/play_pause"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:background="@color/colorWhite"
            android:padding="18dp"
            android:src="@drawable/ic_pause_dark_blue"
            app:riv_mutate_background="true"
            app:riv_oval="true" />

        <ImageButton
            android:id="@+id/next_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@+id/play_pause"
            android:layout_toRightOf="@+id/play_pause"
            android:background="@null"
            android:src="@drawable/next_30" />


        <TextView
            android:id="@+id/time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="46dp"
            android:text="11:32"
            android:textColor="@color/colorWhite40" />

    </RelativeLayout>


</RelativeLayout>