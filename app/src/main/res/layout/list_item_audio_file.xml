<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_cover"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@drawable/cover_placeholder"
        android:padding="24dp"
        android:background="@drawable/round_image_background"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/track_cover"
        android:layout_marginBottom="24dp"
        android:paddingBottom="24dp"/>

    <TextView
        android:id="@+id/text_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Кино"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_toRightOf="@id/image_cover"
        android:layout_toEndOf="@id/image_cover"
        android:layout_alignTop="@id/image_cover"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp" />

    <TextView
        android:id="@+id/text_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:36"
        android:textSize="12sp"
        android:textColor="@color/colorBlue3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/image_cover"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"/>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название аудио"
        android:textSize="16sp"
        android:maxLines="2"
        android:layout_toRightOf="@id/image_cover"
        android:layout_toEndOf="@id/image_cover"
        android:layout_below="@+id/text_category"
        android:layout_marginTop="6dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"/>

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@id/image_cover"
        android:layout_toEndOf="@id/image_cover"
        android:layout_below="@+id/text_name"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:textSize="12sp"
        android:textColor="@color/colorGrey"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp" />
</RelativeLayout>